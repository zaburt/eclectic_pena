= simple_form_for(@band_url) do |f|
  = f.error_notification

  .form-inputs
    = f.input :url
    = f.association :band, :selected => @band_id
    = f.input :description
    = f.input :date, start_year: Date.today.year - 110, end_year: Date.today.year, :default => default_date

  .form-actions.float-right
    = f.button :submit, :class => 'button'

