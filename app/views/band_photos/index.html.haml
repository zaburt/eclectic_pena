.row
  .small-24.columns.page_top
    = t('band_photos')

.row
  .small-24.columns
    %table
      %thead
        %tr
          %th
          %th
            = t('activerecord.attributes.band_photo.name')
          %th
            = t('activerecord.attributes.band_photo.band')
          %th
          %th
          %th

      %tbody
        - @band_photos.each do |band_photo|
          %tr
            %td= image_tag band_photo.image.url(:small), :class => 'small_image'
            %td= band_photo.name
            %td= link_to band_photo.band.try(:name), band_photo.band
            %td= link_to t('show'), band_photo
            %td= link_to t('edit'), edit_band_photo_path(band_photo)
            %td= link_to t('delete'), band_photo, :method => :delete, :data => {:confirm => t('are_you_sure')}

    %br

    = link_to t('generic.new_model', :name => BandPhoto.model_name.human), new_band_photo_path(:band_id => @band_id), :class => 'button'

