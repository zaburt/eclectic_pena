.row
  .top-bar
    .top-bar-title
      %span{'data-responsive-toggle' => 'responsive_menu', 'data-hide-for' => 'medium'}
        %button.menu-icon{:type => 'button', 'data-toggle' => ''}
      /%a{:href => '/'}
      /  %i.fi-home
      %span.logo_wrapper
        / = image_tag 'schrodingiller_small.png'
        %i.fi-home
        %i
          Eclectic Pena
    #responsive_menu
      .top-bar-left
        %ul.dropdown.menu.vertical.medium-horizontal{'data-dropdown-menu' => ''}
          %li
            = link_to t('home'), root_path
      .top-bar-right
        %ul.menu.vertical.medium-horizontal
          - if signed_in?
            %li
              = link_to current_user.email, edit_user_registration_path
            %li
              = link_to t('logout'), destroy_user_session_path, method: :delete
          - else
            %li
              = link_to t('devise.shared.links.sign_up'), new_user_registration_path
            %li
              = link_to t('devise.shared.links.sign_in'), new_user_session_path

