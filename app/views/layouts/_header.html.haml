.row
  .top-bar
    .top-bar-title
      %span{'data-responsive-toggle' => 'responsive_menu', 'data-hide-for' => 'medium'}
        %button.menu-icon.dark{:type => 'button', 'data-toggle' => ''}
      %a{:href => '/'}
        %i.fi-home
        %i
          Eclectic Pena
    #responsive_menu
      .top-bar-left
        %ul.dropdown.menu{'data-dropdown-menu' => ''}
          %li
            = link_to 'Hebele', '/'
      .top-bar-right
        %ul.menu
          - if signed_in?
            %li
              = link_to current_user.email, edit_user_registration_path
            %li
              = link_to t('logout'), destroy_user_session_path, method: :delete
          - else
            %li
              = link_to t('devise.shared.links.sign_up'), new_user_registration_path
            %li
              = link_to t('devise.shared.links.sign_in'), new_user_session_path

